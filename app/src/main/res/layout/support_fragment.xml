<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginLeft="15dp"
                                                   android:layout_marginRight="15dp"
                                                   android:layout_marginTop="50dp"
        >


    <TextView
            android:id="@+id/header_title"
            android:text="Служба поддержки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="20sp"/>
    <TextView
            android:id="@+id/h2_support"
            android:text="Если возникли проблемы:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            app:layout_constraintTop_toBottomOf="@id/header_title"
            app:layout_constraintStart_toStartOf="parent"

            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="20sp"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_support_number"
            android:layout_width="328dp"
            android:layout_height="79dp"
            android:layout_marginTop="35dp"

            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp"

            android:background="@drawable/round_corner_solid"

            app:layout_constraintStart_toStartOf="@id/h2_support"
            app:layout_constraintTop_toBottomOf="@id/h2_support">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:layout_marginTop="10dp"

                android:text="Позвоните по этому номеру"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/black"

                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|start"
                android:layout_marginBottom="10dp"

                android:text="+7 (911) 111-11-11"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textFontWeight="500"
                />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_support_telegram"
            android:layout_width="328dp"
            android:layout_height="79dp"
            android:layout_marginTop="35dp"

            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp"

            android:background="@drawable/round_corner_solid"

            app:layout_constraintStart_toStartOf="@id/card_support_number"
            app:layout_constraintTop_toBottomOf="@id/card_support_number">

        <TextView
                android:id="@+id/courier_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:layout_marginTop="10dp"

                android:text="Напишите нам в телеграм"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/black"

                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|start"
                android:layout_marginBottom="10dp"

                android:text="\@delivery_support_bot"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textFontWeight="500"
                />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>