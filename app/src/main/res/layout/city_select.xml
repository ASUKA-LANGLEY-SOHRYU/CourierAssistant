<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginLeft="15dp"
                                                   android:layout_marginRight="15dp"
                                                   android:orientation="vertical"
        >

    <TextView
            android:text="Регистрация"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="50dp"

            android:textAlignment="center"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="20sp"/>


    <TextView
            android:text="Выберите город"
            android:layout_width="264dp"
            android:layout_height="58dp"
            android:id="@+id/hint_main"

            android:layout_marginTop="30dp"

            app:layout_constraintTop_toBottomOf="@id/h1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:textAlignment="center"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="24sp"
            />

    <TextView
            android:text="Выберите город, в котором вы хотите работать курьером"
            android:layout_width="244dp"
            android:layout_height="34dp"
            android:id="@+id/hint_second"

            app:layout_constraintTop_toBottomOf="@id/hint_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:textAlignment="center"
            android:textColor="#333333"
            android:textStyle="normal"
            android:textSize="14sp"
            />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/hint_second"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:text="аарпа"
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_corner_gradient"

            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


</androidx.constraintlayout.widget.ConstraintLayout>

